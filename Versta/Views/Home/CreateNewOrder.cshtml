@model Versta.Models.CreateNewOrderModel   

@{
    ViewData["Title"] = "NewFormOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/css/style.css")" rel="stylesheet" type="text/css" />


<br />
<div class="view">

    <div class="row form-horizontal">
        <div class="col-md-12">
            <p align="center"><h4>Страница создания нового заказа</h4></p>
            <br />

            <div id="fieldPass" style="display: block;">

                @using (Html.BeginForm("CreateNewOrder", "Home"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

             <!--------------------------Город отправителя------------------------------->
             <hr width="300"/>
             @Html.ValidationSummary(true, "", new { @class = "text-danger" })
             <div class="form-group">
                         <h5>Город отправителя </h5>
                         <div class="col-sm-3">
                           @Html.EditorFor(model => model.CityFrom, new { htmlAttributes = new { @class = "form-control", autocomplete="off" }})
                           @Html.ValidationMessageFor(model => model.CityFrom, "", new { @class = "text-danger" })  
                         </div> 
             </div>    
              <br/> 
            <!--------------------------address  отправителя------------------------------->
            <hr width="300"/>
             @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                         <h5>Адрес отправителя  </h5>
                        <div class="col-sm-3">
                            @Html.EditorFor(model => model.AdressFrom, new { htmlAttributes = new { @class = "form-control", autocomplete="off" }})
                            @Html.ValidationMessageFor(model => model.AdressFrom, "", new { @class = "text-danger" })                           </div>
             </div>
             <br/> 
           <!--------------------------city to------------------------------->
            <hr width="300"/>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                         <h5>Город получателя  </h5>
                        <div class="col-sm-3">
                            @Html.EditorFor(model => model.CityTo, new { htmlAttributes = new { @class = "form-control", autocomplete="off" }})
                            @Html.ValidationMessageFor(model => model.CityFrom, "", new { @class = "text-danger" })  
                        </div>
             </div>
             <br/> 
            <!-----------------------address to---------------------->
            <hr width="300"/>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                         <h5>Город получателя </h5> 
                        <div class="col-sm-3">
                            @Html.EditorFor(model => model.AdressTo, new { htmlAttributes = new { @class = "form-control", autocomplete="off" }})
                            @Html.ValidationMessageFor(model => model.AdressTo, "", new { @class = "text-danger" })  
                        </div>
             </div>
             <br/> 
            <!--------------------------Weight------------------------------->
            <hr width="300"/>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                         <h5>Вес груза </h5> 
                        <div class="col-sm-3">
                            @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control", autocomplete="off" }})
                            @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })   
                        </div>
             </div>
            <!--------------------------date------------------------------->
            <hr width="300"/>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                         <h5>Дата забора груза </h5>
                        <div class="col-sm-3">
                            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", autocomplete="off" }})
                            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })   
                        </div>
             </div>
            <!-----------------------Save_changes---------------------->
            <br/><br/>
            <hr width="300"/>
            <div class="form-group">
                    <input type="submit" value="Сохранить изменения" class="btn btn-outline-success" />
            </div>
            <br/>
             <br/> 
                }

            <br/><br/><br/>
        </div>
    </div>
  </div>
</div>




